@page
@model BookModeration

<h2>Books</h2>

<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Add Date</th>
        <th></th>
    </tr>
    @foreach (var book in Model.Books)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Genre</td>
            <td>@book.AddDate.ToString("d")</td>
            <td>
                <form method="post">
                    <input type="hidden" name="id" value="@book.Id" />
                    <input type="submit" value="Delete" asp-page-handler="Delete" />
                </form>
            </td>
        </tr>
    }
</table>
