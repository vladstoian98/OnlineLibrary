@page
@model OnlineLibrary.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<form method="post">
    <fieldset>
        <legend>Login</legend>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group">
            <label asp-for="LoginInput.Email" class="form-label mt-4">Email:</label>
            <input asp-for="LoginInput.Email" class="form-control" />
            <span asp-validation-for="LoginInput.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LoginInput.Password" class="form-label mt-4">Password:</label>
            <input asp-for="LoginInput.Password" type="password" class="form-control" />
            <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-4">Log in</button>
    </fieldset>
</form>
